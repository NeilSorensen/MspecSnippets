<?xml version="1.0" encoding="utf-8"?>
<CodeSnippets xmlns="http://schemas.microsoft.com/VisualStudio/2005/CodeSnippet">
    <CodeSnippet Format="1.0.0">
        <Header>
            <Title>Because</Title>
            <Author>Neil Sorensen</Author>
            <Description>Adds a Because clause for Mspec</Description>
            <Shortcut>bec</Shortcut>
        </Header>
        <Snippet>
            <Code Language="CSharp" Kind="method decl">
                <![CDATA[Because of = () => $end$;]]>
            </Code>
            <Imports>
                <Import>
                    <Namespace>Machine.Specifications</Namespace>
                </Import>
            </Imports>
        </Snippet>
    </CodeSnippet>
</CodeSnippets>